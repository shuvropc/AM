<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArticleManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/menu.css" rel="stylesheet" />

    <!--CSS and JS for Kendo Grid-->
    <link href="@Url.Content("~/grid/kendo-ui-2018/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/grid/kendo-ui-2018/kendo.default.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/grid/kendo/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/grid/kendo/kendo.dataviz.default.min.css")" rel="stylesheet" type="text/css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <div class="custom-menu">
            <div class="navbar navbar-expand-md navbar-dark bg-dark mb-4" role="navigation">
                <a class="navbar-brand" href="#">Journal Management</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="dropdown1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Article</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown1">
                                <li class="dropdown-item"><a href="~/Article/Create">Create</a></li>
                                <li class="dropdown-item"><a href="~/Article/GetMyArticles">My Articles</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="dropdown1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Journal</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown1">
                                <li class="dropdown-item" href="#"><a>January 2020</a></li>
                                <li class="dropdown-item" href="#"><a>February 2020</a></li>
                                <li class="dropdown-item dropdown">
                                    <a class="dropdown-toggle" id="dropdown1-1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Archive</a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdown1-1">
                                        <li class="dropdown-item" href="#"><a>January 2019</a></li>
                                        <li class="dropdown-item" href="#"><a>February 2019</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="dropdown2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown2</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown2">
                                <li class="dropdown-item" href="#"><a>Action 2 A</a></li>
                                <li class="dropdown-item" href="#"><a>Action 2 B</a></li>
                                <li class="dropdown-item" href="#"><a>Action 2 C</a></li>
                                <li class="dropdown-item dropdown">
                                    <a class="dropdown-toggle" id="dropdown2-1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown2.1</a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdown2-1">
                                        <li class="dropdown-item" href="#"><a>Action 2.1 A</a></li>
                                        <li class="dropdown-item" href="#"><a>Action 2.1 B</a></li>
                                        <li class="dropdown-item" href="#"><a>Action 2.1 C</a></li>
                                        <li class="dropdown-item dropdown">
                                            <a class="dropdown-toggle" id="dropdown2-1-1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown2.1.1</a>
                                            <ul class="dropdown-menu" aria-labelledby="dropdown2-1-1">
                                                <li class="dropdown-item" href="#"><a>Action 2.1.1 A</a></li>
                                                <li class="dropdown-item" href="#"><a>Action 2.1.1 B</a></li>
                                                <li class="dropdown-item" href="#"><a>Action 2.1.1 C</a></li>
                                            </ul>
                                        </li>
                                        <li class="dropdown-item dropdown">
                                            <a class="dropdown-toggle" id="dropdown2-1-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown2.1.2</a>
                                            <ul class="dropdown-menu" aria-labelledby="dropdown2-1-2">
                                                <li class="dropdown-item" href="#"><a>Action 2.1.2 A</a></li>
                                                <li class="dropdown-item" href="#"><a>Action 2.1.2 B</a></li>
                                                <li class="dropdown-item" href="#"><a>Action 2.1.2 C</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <form class="form-inline mt-2 mt-md-0">
                        @{
                            //if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                            if (User.Identity.IsAuthenticated)
                            {
                                <a href="~/User/CreateProfessionalProfile" class="btn btn-outline-info my-2 my-sm-0">Professional Profile</a>
                                <a href="~/User/Profile" class="btn btn-outline-info my-2 my-sm-0">Profile</a>
                                <a href="~/User/Logout" class="btn btn-outline-info my-2 my-sm-0">LogOut</a>
                            }
                            else
                            {
                                <a href="~/Account/Login" class="btn btn-outline-info my-2 my-sm-0">Login</a>
                            }

                        }

                    </form>
                </div>
            </div>

        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ArticleManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js"></script>

    <script src="@Url.Content("~/grid/kendo/kendo/jszip.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/grid/kendo-ui-2018/kendo.all.min.js")" type="text/javascript" charset="utf-8"></script>

    <script>
        var baseurl = "https://localhost:44336/";
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
