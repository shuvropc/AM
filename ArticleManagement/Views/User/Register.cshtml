@model AM.DM.User.UserInformationModel

@{
    ViewData["Title"] = "registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/user/registration.css" rel="stylesheet" />
}
@using (Html.BeginForm("Register", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container register-form">
        <div class="form">
            <div class="note">
                <p>New User Registration</p>
            </div>

            <div class="form-content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" required name="UserName" class="form-control" placeholder="Your Name *" value="" />
                        </div>
                        <div class="form-group">
                            <input type="password" min="6" required name="Password" class="form-control" placeholder="Your Password *" value="" />
                        </div>
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <input type="text" required name="Email" class="form-control" placeholder="Email *" value="" />
                        </div>
                        <div class="form-group">
                            <input type="password" min="6" required name="ConfirmPassword" class="form-control" placeholder="Confirm Password *" value="" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btnSubmit">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@Html.Raw(ViewBag.ServerResponseMessage)

