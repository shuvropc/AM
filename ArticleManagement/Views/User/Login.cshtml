@model AM.DM.User.UserInformationModel

@{
    ViewData["Title"] = "User Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/user/registration.css" rel="stylesheet" />
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="container register-form col-md-6">
        <div class="form">
            <div class="note">
                <p>User Login</p>
            </div>

            <div class="form-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="email" required name="Email" class="form-control" placeholder="Email *" value="" />
                        </div>
                        <div class="form-group">
                            <input type="password" required name="Password" class="form-control" placeholder="Your Password *" value="" />
                        </div>
                    </div>
                </div>


            <div class="row">
                <div class="col-md-12 text-center text-danger">
                    <label> @Html.Raw(TempData["SeverResponse"])</label>
                </div>
            </div>

                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btnSubmit">Login</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <p class="text-dark">Not registered yet? <a class="text-primary text-decoration-none" href="~/User/Register">Register</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



