@model AM.DM.User.UserInformationModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/css/user/registration.css" rel="stylesheet" />
}
@using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="container register-form col-md-6">
        <div class="form">
            <div class="note">
                <p>User Login</p>
            </div>

            <div class="form-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="text"  required name="VerificationCode" class="form-control" placeholder="Verification Code *" value="" />
                        </div>
                        <div class="form-group">
                            <input type="password" min="6" required name="NewPassword" class="form-control" placeholder="New Password *" value="" />
                        </div>
                    </div>
                </div>


            <div class="row">
                <div class="col-md-12 text-center text-danger">
                    <label> @Html.Raw(TempData["SeverResponse"])</label>
                </div>
            </div>

                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btnSubmit">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



